{
	"version": 2,
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"settings": {
		"appearanceTools": true,
		"color": {
			"defaultGradients": false,
			"defaultDuotone": false,
			"palette": [
				{
					"slug": "base",
					"color": "#FFFDF2",
					"name": "Base"
				},
				{
					"slug": "contrast",
					"color": "#4a4a4a",
					"name": "Contrast"
				},
				{
					"slug": "primary",
					"color": "#000000",
					"name": "Primary"
				},
				{
					"slug": "secondary",
					"color": "#f6b501",
					"name": "Secondary"
				},
				{
					"slug": "transparent",
					"color": "transparent",
					"name": "Transparent"
				},
				{
					"slug": "text-light",
					"color": "#C8C7CC",
					"name": "Text Light"
				}
			],
			"gradients": [
				{
					"slug": "d-transparent-primary",
					"gradient": "linear-gradient(to bottom right,transparent 49.9%,#000000 50%)",
					"name": "Diagonal transparent to primary"
				},
				{
					"slug": "d-primary-transparent",
					"gradient": "linear-gradient(to bottom right, #000000 49.9%, transparent 50%)",
					"name": "Diagonal primary to transparent"
				},
				{
					"slug": "d-white-primary",
					"gradient": "linear-gradient(to bottom right,#fff 49.9%,#000000 50%)",
					"name": "Diagonal white to primary"
				},
				{
					"slug": "d-primary-white",
					"gradient": "linear-gradient(to bottom right,#000000 49.9%,#fff 50%)",
					"name": "Diagonal primary to white"
				},
				{
					"slug": "h-primary-white",
					"gradient": "linear-gradient(#000000 49.9%,#fff 50%)",
					"name": "Horizontal primary to white"
				},
				{
					"slug": "h-white-primary",
					"gradient": "linear-gradient(#fff 49.9%,#000000 50%)",
					"name": "Horizontal white to primary"
				},
				{
					"slug": "v-primary-white",
					"gradient": "linear-gradient(to right, #000000 49.9%,#fff 50%)",
					"name": "Vertical primary to white"
				},
				{
					"slug": "v-white-primary",
					"gradient": "linear-gradient(to right, #fff 49.9%,#000000 50%)",
					"name": "Vertical white to primary"
				}
			],
			"duotone": [
				{
					"colors": [ "#f6b501", "#000000" ],
					"slug": "secondary-primary",
					"name": "Secondary and primary"
				},
				{
					"colors": [ "#000000", "#f0f0f1" ],
					"slug": "primary-contrast",
					"name": "Primary and foreground"
				},
				{
					"colors": [ "#ffffff", "#f0f0f1" ],
					"slug": "base-contrast",
					"name": "background and foreground"
				}
			]
		},
		"layout": {
			"contentSize": "1380px",
			"wideSize": "100%"
		},
		"spacing": {
			"units": [ "px", "em", "rem", "vh", "vw", "%" ],
			"spacingScale": {
				"steps": 7
			},
			"spacingSizes": [
				{
					"size": "0.44rem",
					"slug": "20",
					"name": "2"
				},
				{
					"size": "0.67rem",
					"slug": "30",
					"name": "3"
				},
				{
					"size": "1rem",
					"slug": "40",
					"name": "4"
				},
				{
					"size": "1.5rem",
					"slug": "50",
					"name": "5"
				},
				{
					"size": "2.25rem",
					"slug": "60",
					"name": "6"
				},
				{
					"size": "clamp(2.25rem, 10vw, 3.38rem)",
					"slug": "70",
					"name": "7"
				},
				{
					"size": "clamp(3.38rem, 10vw, 5.06rem)",
					"slug": "80",
					"name": "8"
				}
			]
		},
		"shadow": {
			"presets": [
				{
					"name": "Natural",
					"slug": "natural",
					"shadow": "0 4px 14px rgba(0, 0, 0, 0.06)"
				}
			]
		},
		"typography": {
			"dropCap": false,
			"fluid": true,
			"fontFamilies": [
				{
					"name": "System",
					"slug": "system",
					"fontFamily": "-apple-system,BlinkMacSystemFont,\"Segoe UI\",Roboto,Oxygen-Sans,Ubuntu,Cantarell,\"Helvetica Neue\",sans-serif"
				},
				{
					"name": "Serif",
					"slug": "serif",
					"fontFamily": "\"Times New Roman\",\"New York\",Times,\"Noto Serif\",serif"
				},
				{
					"name": "Monospace",
					"slug": "monospace",
					"fontFamily": "Consolas,Menlo,Monaco,\"SF Mono\",\"DejaVu Sans Mono\",\"Roboto Mono\",\"Courier New\",Courier,monospace"
				},
				{
					"name": "Poppins",
					"slug": "poppins",
					"fontFamily": "Poppins, sans-serif",
					"fontFace": [
						{
							"fontFamily": "Poppins",
							"fontWeight": "400",
							"fontStyle": "normal",
							"fontStretch": "normal",
							"src": [ "file:./assets/fonts/poppins-regular.woff2" ]
						},
						{
							"fontFamily": "Poppins",
							"fontWeight": "400",
							"fontStyle": "italic",
							"fontStretch": "normal",
							"src": [ "file:./assets/fonts/poppins-italic.woff2" ]
						},
						{
							"fontFamily": "Poppins",
							"fontWeight": "700",
							"fontStyle": "normal",
							"fontStretch": "normal",
							"src": [ "file:./assets/fonts/poppins-bold.woff2" ]
						},
						{
							"fontFamily": "Poppins",
							"fontWeight": "700",
							"fontStyle": "italic",
							"fontStretch": "normal",
							"src": [ "file:./assets/fonts/poppins-bold-italic.woff2" ]
						}
					]
				}
			],
			"fontSizes": [
				{
					"slug": "extra-small",
					"size": "1rem",
					"name": "Extra small",
					"fluid": false
				},
				{
					"slug": "small",
					"size": "1.125rem",
					"name": "Small",
					"fluid": false
				},
				{
					"slug": "medium",
					"size": "1.25rem",
					"name": "Medium",
					"fluid": {
						"min": "1.25rem",
						"max": "1.5rem"
					}
				},
				{
					"slug": "large",
					"size": "2rem",
					"name": "Large",
					"fluid": {
						"min": "1.75rem",
						"max": "2rem"
					}
				},
				{
					"slug": "x-large",
					"size": "2.75rem",
					"name": "XL",
					"fluid": {
						"min": "2.5rem",
						"max": "2.75rem"
					}
				},
				{
					"slug": "xx-large",
					"size": "3.75rem",
					"name": "XXL",
					"fluid": {
						"min": "3rem",
						"max": "3.75rem"
					}
				}
			]
		},
		"useRootPaddingAwareAlignments": true
	},
	"styles": {
		"blocks": {
			"core/comment-author-name": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)"
				}
			},
			"core/comment-date": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)"
				}
			},
			"core/comment-edit-link": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)"
				}
			},
			"core/comment-reply-link": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)"
				}
			},
			"core/details": {
				"color": {
					"text": "var(--wp--preset--color--base)",
					"background": "var(--wp--preset--color--secondary)"
				},
				"spacing": {
					"padding": {
						"top": "var(--wp--preset--spacing--30)",
						"right": "var(--wp--preset--spacing--30)",
						"bottom": "var(--wp--preset--spacing--30)",
						"left": "var(--wp--preset--spacing--30)"
					}
				}
			},
			"core/footnotes": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--extra-small)"
				},
				"color": {
					"text": "var(--wp--preset--color--secondary)"
				},
				"elements": {
					"link": {
						"color": {
							"text": "var(--wp--preset--color--secondary)"
						}
					}
				}
			},
			"core/latest-comments": {
				"spacing": {
					"padding": {
						"left": "0px"
					}
				}
			},
			"core/navigation": {
				"css": "& .wp-block-navigation-item:hover > a, & a:hover, & a:active, & .current-menu-item > a { text-decoration: underline; text-decoration-style: solid; text-decoration-thickness: 3px; text-underline-offset: 4px; }",
				"elements": {
					"link": {
						"typography": {
							"textDecoration": "none"
						}
					}
				}
			},
			"core/page-list": {
				"elements": {
					"link": {
						"typography": {
							"textDecoration": "none"
						},
						":hover": {
							"typography": {
								"textDecoration": "none"
							}
						}
					}
				}
			},
			"core/separator": {
				"color": {
					"background": "var(--wp--preset--color--secondary)"
				}
			},
			"core/post-author-name": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--extra-small)"
				},
				"color": {
					"text": "var(--wp--preset--color--secondary)"
				},
				"elements": {
					"link": {
						"color": {
							"text": "var(--wp--preset--color--secondary)"
						}
					}
				}
			},
			"core/post-content": {
				"spacing": {
					"padding": {
						"top": "0px",
						"bottom": "var(--wp--preset--spacing--60)"
					}
				}
			},
			"core/post-date": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--extra-small)"
				},
				"color": {
					"text": "var(--wp--preset--color--secondary)"
				},
				"elements": {
					"link": {
						"color": {
							"text": "var(--wp--preset--color--secondary)"
						}
					}
				}
			},
			"core/post-navigation-link": {
				"typography": {
					"fontWeight": "700"
				}
			},
			"core/post-terms": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--extra-small)"
				},
				"color": {
					"text": "var(--wp--preset--color--secondary)"
				},
				"elements": {
					"link": {
						"color": {
							"text": "var(--wp--preset--color--secondary)"
						}
					}
				}
			},
			"core/query-pagination": {
				"typography": {
					"fontWeight": "700"
				},
				"spacing": {
					"padding": {
						"top": "var(--wp--preset--spacing--60)",
						"bottom": "var(--wp--preset--spacing--60)"
					}
				}
			},
			"core/query-title": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--medium)"
				}
			},
			"core/search": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)"
				}
			},
			"core/site-title": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--medium)"
				}
			},
			"woocommerce/product-categories": {
				"css": "& ul{list-style:none;} & ul:first-child{padding-left:0;}"
			},
			"woocommerce/product-price": {
				"color": {
					"text": "var(--wp--preset--color--contrast)"
				},
				"elements": {
					"link":{
						"color": {
							"text": "var(--wp--preset--color--contrast)"
						}
					}
				}
			},
			"woocommerce/filter-wrapper": {
				"elements": {
					"heading": {
						"typography": {
							"fontSize": "var(--wp--preset--font-size--medium)",
							"fontWeight": "400"
						}
					}
				}
			},
			"yoast/faq-block": {
				"css" : "& .schema-faq-section { background: var(--wp--preset--color--secondary); color: var(--wp--preset--color--base); padding: 8px 4px 8px 32px; margin: 4px 0;} & .schema-faq-answer{line-height: inherit; margin: 0;}"
			}
		},
		"color": {
			"background": "var(--wp--preset--color--base)",
			"text": "var(--wp--preset--color--contrast)"
		},
		"css": "a, button, .wp-block-button__link, input[type=\"submit\"], input[type=\"button\"], .clickable { cursor: none; } .sidebar{ background: var(--wp--preset--color--primary); border-radius: 4px;} body:not(.blog):not(.single-post):not(.category):not(.tag):not(.post-type-archive-product) header.wp-block-template-part { position: fixed !important; top: 0; left: 0; right: 0; z-index: 1000; width: 100%; transition: padding 0.3s ease, background-color 0.3s ease; background-color: transparent; } body:not(.blog):not(.single-post):not(.category):not(.tag):not(.post-type-archive-product) header.wp-block-template-part.is-scrolled { background-color: #ffffff; padding-top: 0 !important; padding-bottom: 0 !important; box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.06); } body:not(.blog):not(.single-post):not(.category):not(.tag):not(.post-type-archive-product) header.wp-block-template-part .custom-logo { transition: width 0.3s ease, max-width 0.3s ease; } body:not(.blog):not(.single-post):not(.category):not(.tag):not(.post-type-archive-product) header.wp-block-template-part.is-scrolled .custom-logo { width: 100px !important; max-width: 100px !important; } body:not(.blog):not(.single-post):not(.category):not(.tag):not(.post-type-archive-product) header.wp-block-template-part .wp-block-button__link { transition: padding 0.3s ease, font-size 0.3s ease; } body:not(.blog):not(.single-post):not(.category):not(.tag):not(.post-type-archive-product) header.wp-block-template-part.is-scrolled .wp-block-button__link { padding-top: 12px !important; padding-bottom: 12px !important; font-size: 14px !important; } body:not(.blog):not(.single-post):not(.category):not(.tag):not(.post-type-archive-product).admin-bar header.wp-block-template-part { top: 32px; } @media screen and (max-width: 782px) { body:not(.blog):not(.single-post):not(.category):not(.tag):not(.post-type-archive-product).admin-bar header.wp-block-template-part { top: 46px; } } body:not(.blog):not(.single-post):not(.category):not(.tag):not(.post-type-archive-product) main.wp-block-group { padding-top: 0 !important; margin-top: 0 !important; } body:not(.blog):not(.single-post):not(.category):not(.tag):not(.post-type-archive-product) .wp-site-blocks > header + * { margin-top: 0 !important; } .custom-cursor { position: fixed; top: 0; left: 0; width: 10px; height: 10px; background-color: var(--wp--preset--color--base); border-radius: 50%; pointer-events: none; z-index: 9999; transform: translate(-50%, -50%); transition: width 0.2s ease, height 0.2s ease, background-color 0.2s ease, opacity 0.2s ease; mix-blend-mode: difference; opacity: 0; } .custom-cursor.is-expanded { width: 50px; height: 50px; background-color: var(--wp--preset--color--secondary); opacity: 0.6; mix-blend-mode: normal; } @media (hover: none) { .custom-cursor { display: none; } a, button, .wp-block-button__link, input[type=\"submit\"], input[type=\"button\"], .clickable { cursor: auto; } } :where(.wp-block-search__button-inside .wp-block-search__inside-wrapper) .wp-block-search__input { border: none; padding: 0 15px; } .lemon-concentrate-breadcrumbs-icon svg { max-width: 20px; height: auto; } .lemon-concentrate-breadcrumbs-icon { line-height: 0; } .wp-block-columns { gap: var(--wp--preset--spacing--50); } .wp-block-column { margin-bottom: 0; } @media (max-width: 768px) { header.wp-block-template-part .wp-block-navigation, header.wp-block-template-part .wp-block-buttons, header.wp-block-template-part .menu, header.wp-block-template-part .contact-us { display: none !important; } header.wp-block-template-part .lemon-mobile-menu .wp-block-navigation, header.wp-block-template-part .lemon-mobile-menu .wp-block-buttons { display: flex !important; } header.wp-block-template-part .custom-logo { max-width: 80px !important; width: 80px !important; height: auto !important; } body .wp-site-blocks > .wp-block-cover:first-of-type { min-height: 75vh !important; } } @media (min-width: 769px) { header.wp-block-template-part .wp-block-navigation__responsive-container:not(.is-menu-open) { display: flex !important; } header.wp-block-template-part .wp-block-navigation__responsive-container-toggle { display: none !important; } } .wp-block-search { width: 100%; max-width: 750px; }",
		"elements": {
			"heading": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--medium)",
					"lineHeight": "1",
					"fontWeight": "500"
				}
			},
			"h1": {
				"typography": {
					"fontSize": "clamp(2.5rem, 4vw + 1rem, 4rem)",
					"fontWeight": "700"
				}
			},
			"h2": {
				"typography": {
					"fontSize": "clamp(1.75rem, 2vw + 1rem, 2.25rem)",
					"fontWeight": "700"
				}
			},
			"h3": {
				"typography": {
					"fontSize": "clamp(1.5rem, 2vw + 1rem, 2.25rem)",
					"fontWeight": "500"
				}
			},
			"link": {
				"color": {
					"text": "var(--wp--preset--color--contrast)"
				},
				":hover": {
					"color": {
						"text": "var(--wp--preset--color--contrast)"
					},
					"typography": {
						"textDecoration": "none"
					}
				},
				":focus": {
					"color": {
						"text": "var(--wp--preset--color--contrast)"
					}
				},
				":active": {
					"color": {
						"text": "var(--wp--preset--color--contrast)"
					}
				}
			},
			"button": {
				"border": {
					"color": "var(--wp--preset--color--transparent)",
					"width": "4px",
					"style": "solid",
					"radius": "4px"
				},
				"color": {
					"background": "var(--wp--preset--color--primary)",
					"text": "var(--wp--preset--color--contrast)"
				},
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)",
					"fontWeight": "400",
					"lineHeight": "1"
				},
				"spacing": {
					"padding": {
						"top": "var(--wp--preset--spacing--30)",
						"bottom": "var(--wp--preset--spacing--30)",
						"left": "var(--wp--preset--spacing--50)",
						"right": "var(--wp--preset--spacing--50)"
					}
				},
				"shadow": "var(--wp--preset--shadow--natural)",
				":hover": {
					"border": {
						"color": "var(--wp--preset--color--secondary)"
					}
				}
			}
		},
		"typography": {
			"fontSize": "clamp(1rem, 0.95rem + 0.25vw, 1.125rem)",
			"fontFamily": "var(--wp--preset--font-family--poppins)",
			"lineHeight": "1.7"
		},
		"spacing": {
			"blockGap": "1.7rem"
		}
	},
	"templateParts": [
		{
			"name": "header",
			"title": "Header",
			"area": "header"
		},
		{
			"name": "narrow-header",
			"title": "Narrow header",
			"area": "header"
		},
		{
			"name": "footer",
			"title": "Footer",
			"area": "footer"
		},
		{
			"name": "narrow-footer",
			"title": "Narrow footer",
			"area": "footer"
		},
		{
			"name": "sidebar",
			"title": "Sidebar",
			"area": "uncategorized"
		},
		{
			"name": "post-navigation",
			"title": "Post navigation",
			"area": "uncategorized"
		},
		{
			"name": "comments",
			"title": "Comments",
			"area": "uncategorized"
		}
	],
	"customTemplates": [
		{
			"name": "no-title",
			"title": "No title",
			"postTypes": [ "post","page" ]
		},
		{
			"name": "featured-image",
			"title": "Featured image in header",
			"postTypes": [ "post","page" ]
		},
		{
			"name": "sidebar-page-template",
			"title": "Page with sidebar",
			"postTypes": [ "page" ]
		},
		{
			"name": "sidebar-post-template",
			"title": "Post with sidebar",
			"postTypes": [ "post" ]
		},
		{
			"name": "single-product",
			"title": "Single product"
		},
		{
			"name": "archive-product",
			"title": "Shop (Product archive)"
		}
	]
}
